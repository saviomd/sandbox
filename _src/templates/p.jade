include /data/site.jade
include /data/style.jade

doctype html
html(lang=site.lang)
	block pageData

	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
		title= page.title
		link(rel='stylesheet', href='../assets/tailwind.css')
		block style
	body(class=`${style.base}`)
		include /includes/header.jade
		div(class=`${style.container}`)
			.border.border-grey.mb-4.rounded
				h2.bg-grey-lightest.border-b.border-grey.p-4.rounded-t= page.title
				.p-4
					block content
			include /includes/footer.jade
		block script
